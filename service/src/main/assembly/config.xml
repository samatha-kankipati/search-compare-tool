<assembly xmlns="http://maven.apache.org/xsd/assembly-1.0.0.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <id>config</id>

    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/target/properties</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
    </fileSets>

</assembly>
